extends layout

block content
  .container.py-5
    h2.text-center.mb-4 Iniciar sesión
    form(method="POST", action="/login").mx-auto(style="max-width: 400px;")
      .mb-3
        label.form-label(for="email") Correo electrónico
        input.form-control(type="email", name="email", required=true)
      .mb-3
        label.form-label(for="password") Contraseña
        input.form-control(type="password", name="password", required=true)
      button.btn.btn-primary.w-100(type="submit") Ingresar
      p.text-center.mt-3
        | ¿No tenés cuenta?
        a(href="/registro") Registrate
